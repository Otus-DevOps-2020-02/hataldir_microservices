docker network create reddit
docker run -d --network=reddit --network-alias=post_db1 --network-alias=comment_db1 --env-file=envs -v reddit_db:/data/db mongo:latest
docker run -d --network=reddit --network-alias=post1 --env-file=envs hataldir/post:1.0
docker run -d --network=reddit --network-alias=comment1 --env-file=envs hataldir/comment:4.0
docker run -d --network=reddit -p 9292:9292 --env-file=envs hataldir/ui:4.0
